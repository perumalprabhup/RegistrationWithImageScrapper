extends layout

block content
  .container
   h1 Login Registration with Authentication
  .jumbotron
  
    if (!user)
      a(href="/login")  Login
     
      a(href="/register") Register
    if (user)
      p You are currently logged in with #{user.username}
      a(href="/logout") Logout	
 form(role='form', action="/upload",method="post",enctype="multipart/form-data", style='max-width: 300px;')
      .form-group
          input.form-control(type='file', name="img", placeholder='Enter Image Name to Download and Display')
      
